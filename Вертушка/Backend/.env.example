# Настройки приложения
APP_NAME=RecordScanner
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# База данных PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/recordscanner

# JWT настройки
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Discogs API
DISCOGS_API_KEY=afd72017-b040-4a22-833e-89b50e99f884
DISCOGS_API_SECRET=your-discogs-api-secret
DISCOGS_USER_AGENT=RecordScannerApp/1.0

# Apple Sign In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

# Google Sign In
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@recordscanner.app

# URL приложения
APP_URL=http://localhost:8000
FRONTEND_URL=https://recordscanner.app
