{
  "expo": {
    "name": "Вертушка",
    "slug": "vertushka",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vertushka",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vertushka.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложению нужен доступ к камере для сканирования штрихкодов пластинок"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.vertushka.app",
      "permissions": [
        "CAMERA"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Приложению нужен доступ к камере для сканирования штрихкодов пластинок"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
